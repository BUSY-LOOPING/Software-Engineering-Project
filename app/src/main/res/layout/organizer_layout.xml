            <TextView
                android:id="@+id/prevListedTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/nexa_bold"
                android:text="Previously listed events"
                android:textColor="@color/black"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/prevListedRecyclerView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:paddingHorizontal="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/prevListedTxt" />


            <TextView
                android:id="@+id/newEventTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/nexa_bold"
                android:text="Add New Event"
                android:textColor="@color/black"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/prevListedRecyclerView" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingHorizontal="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/newEventTxt">

                <TextView
                    android:id="@+id/eventName_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/nexa_book"
                    android:text="Event Name- Required"
                    android:textColor="#666666" />

                <EditText
                    android:id="@+id/eventName_et"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/stroked_bg"
                    android:fontFamily="sans-serif"
                    android:maxLines="1"
                    android:padding="10dp"
                    android:textColor="#3A3535"
                    app:circularflow_radiusInDP="5dp" />

                <TextView
                    android:id="@+id/price_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="35dp"
                    android:fontFamily="@font/nexa_book"
                    android:text="Price of ticket- Required"
                    android:textColor="#666666" />

                <EditText
                    android:id="@+id/price_et"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/stroked_bg"
                    android:fontFamily="sans-serif"
                    android:inputType="numberDecimal"
                    android:maxLines="1"
                    android:padding="10dp"
                    android:textColor="#3A3535"
                    app:circularflow_radiusInDP="5dp" />

                <TextView
                    android:id="@+id/no_seats_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="35dp"
                    android:fontFamily="@font/nexa_book"
                    android:text="Number of seats- Required"
                    android:textColor="#666666" />

                <NumberPicker
                    android:id="@+id/seats_picker"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:theme="@style/AppTheme.Picker" />

                <TextView
                    android:id="@+id/time_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="35dp"
                    android:fontFamily="@font/nexa_book"
                    android:text="Time- Required"
                    android:textColor="#666666" />

                <TimePicker
                    android:id="@+id/timePicker"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@color/white"
                    android:backgroundTint="@color/white"
                    android:theme="@style/themeOnverlay_timePicker" />

                <TextView
                    android:id="@+id/date_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="35dp"
                    android:fontFamily="@font/nexa_book"
                    android:text="Date- Required"
                    android:textColor="#666666" />

                <DatePicker
                    android:id="@+id/datePicker"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:theme="@style/DatePicker_Dark" />

                <TextView
                    android:id="@+id/venue_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="35dp"
                    android:fontFamily="@font/nexa_book"
                    android:text="Venue- Required"
                    android:textColor="#666666" />

                <EditText
                    android:id="@+id/venue_et"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/stroked_bg"
                    android:fontFamily="sans-serif"
                    android:inputType="text"
                    android:padding="10dp"
                    android:textColor="#3A3535"
                    app:circularflow_radiusInDP="5dp" />

                <TextView
                    android:id="@+id/event_type_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="35dp"
                    android:fontFamily="@font/nexa_book"
                    android:text="Event Type"
                    android:textColor="#666666" />

                <Spinner
                    android:layout_marginTop="10dp"
                    android:id="@+id/spinner"
                    android:backgroundTint="@color/white"
                    android:layout_width="wrap_content"
                    android:spinnerMode="dropdown"
                    android:popupBackground="@color/white"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/small_desc_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="35dp"
                    android:fontFamily="@font/nexa_book"
                    android:text="Small Description"
                    android:textColor="#666666" />

                <EditText
                    android:id="@+id/small_desc_et"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/stroked_bg"
                    android:fontFamily="sans-serif"
                    android:inputType="textShortMessage"
                    android:padding="10dp"
                    android:textColor="#3A3535"
                    app:circularflow_radiusInDP="5dp" />


                <TextView
                    android:id="@+id/full_desc_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="35dp"
                    android:fontFamily="@font/nexa_book"
                    android:text="Full Description"
                    android:textColor="#666666" />

                <EditText
                    android:id="@+id/full_desc_et"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/stroked_bg"
                    android:fontFamily="sans-serif"
                    android:gravity="start|top"
                    android:inputType="textMultiLine"
                    android:minHeight="150dp"
                    android:padding="10dp"
                    android:textColor="#3A3535"
                    app:circularflow_radiusInDP="5dp" />

                <TextView
                    android:id="@+id/choose_img_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="35dp"
                    android:fontFamily="@font/nexa_book"
                    android:text="Choose an event art"
                    android:textColor="#666666" />


                <ImageView
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:id="@+id/img_picker"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:adjustViewBounds="true"
                    android:background="@drawable/stroked_bg"
                    android:scaleType="centerInside"
                    android:src="@drawable/ic_gallery" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/addEvent_btn"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="5dp"
                    android:backgroundTint="#525252"
                    android:fontFamily="@font/nexa_book"
                    android:text="Add Event"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    app:cornerRadius="5dp"
                    app:strokeWidth="0dp" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="80dp" />
            </LinearLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>