            app:tint="@color/white" />

        <ImageView
            android:id="@+id/qr"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:padding="0dp"
            android:src="@drawable/ic_baseline_qr_code_24"
            app:tint="@color/white" />

    </RelativeLayout>

